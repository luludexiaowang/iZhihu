<% include head %>
<!-- Content -->
<section id="wrapper">
  <div id="container">
    <% if (sections && sections.length) { %>
    <% for (var i = 0, ii = sections.length; i < ii; i++) { var item = sections[i]; %>
    <div class="grid">
      <a href="<%= item.url %>">
        <img class="image" src="<%= config.domain + item.image %>?imageMogr2/thumbnail/300x300!" alt="<%= item.name %>"/>
        <aside class="top"><span><%= item.name %></span></aside>
        <aside class="bottom"><span class="caption"><%= item.description %></span></aside>
      </a>
    </div>
    <% } %>
    <% } %>
  </div>
</section>
<% include foot %>