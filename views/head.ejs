<!doctype html>
<html lang="zh">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"/>
  <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
  <meta name="description" content="<%- locals.description ? locals.description + ' - ' : '' %><%= config.site.description %>">
  <meta name="keywords" content="<%= config.site.keywords %>">
  <meta name="author" content="<%= config.site.author %>">
  <title><%- locals.title ? locals.title + ' | ' : '' %><%= config.site.title %></title>
  <link rel='stylesheet' href='<%= config.cdn %>/css/style.css' media='screen'/>
  <!--[if lt IE 9]>
  <script src="<%= config.domain %>/js/html5.js"></script>
  <script src="<%= config.domain %>/js/respond.min.js"></script>
  <![endif]-->
  <script>
    var _hmt = _hmt || [];
    (function () {
      var hm = document.createElement("script");
      hm.src = "//hm.baidu.com/hm.js?deafb1933f4d6280df90827432d160a9";
      var s = document.getElementsByTagName("script")[0];
      s.parentNode.insertBefore(hm, s);
    })();
  </script>
</head>
<body>
<!-- Header -->
<header id="header">
  <nav id="nav">
    <a id="logo" href="<%= config.site.url %>"><%= config.site.name %></a>
    <ul>
      <% config.navigators.forEach(function(navigator){ %>
      <li><a class="<%- isActive(url, navigator.link) %>" href="<%= navigator.link %>"><%= navigator.name %></a></li>
      <% }) %>
    </ul>
  </nav>
</header>